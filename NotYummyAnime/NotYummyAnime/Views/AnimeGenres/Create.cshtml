@model NotYummyAnime.AnimeGenre

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Додавання аніме до жанру @ViewBag.GenreName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AnimeInfoId" class="control-label"></label>
                <select asp-for="AnimeInfoId" class ="form-control" asp-items="ViewBag.AnimeInfoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="GenreId" class="control-label"></label>
                <select asp-for="GenreId" class ="form-control" asp-items="ViewBag.GenreId"></select>
            </div>

            <input type ="hidden" value="@ViewBag.Genre_ID" name="GenreName" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
